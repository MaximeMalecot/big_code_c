NAME=AperCool
CC=gcc
CFLAGS=-Wall -Werror -Wextra
LDFLAGS= $(PTHREAD) $(GTKLIB) -export-dynamic
GTKLIB=`pkg-config --cflags --libs gtk+-3.0`
SRC= src/main.c
OBJ= $(SRC:.c=.o)

all: $(NAME)

AperCool: $(OBJ)
	$(CC) -o $@ $^ $(LDFLAGS)

main.o: inc/cool.h

%.o: %.c
	$(CC) -o $@ -c $< $(CFLAGS)

clean:
	rm -f *.o $(NAME)

fclean:	clean
	rm -f $(NAME)
